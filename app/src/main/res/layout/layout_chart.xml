<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yishiou.chartviewdemo.ui.widget.YAxisView
        android:id="@+id/yAxis"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:background="#0ae"
        app:layout_constraintBottom_toTopOf="@id/xAxis"
        app:layout_constraintEnd_toStartOf="@id/xAxis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.yishiou.chartviewdemo.ui.widget.XAxisView
        android:id="@+id/xAxis"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#a0e"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/yAxis"
        app:layout_constraintTop_toBottomOf="@id/yAxis" />

    <com.yishiou.chartviewdemo.ui.widget.LineChartView
        android:id="@+id/lineChart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ae0"
        app:layout_constraintBottom_toTopOf="@id/xAxis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/yAxis"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
